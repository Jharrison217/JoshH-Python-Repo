investment_amount = int(input("Enter the investment amount (greater than 0 less than 50000): "))
while investment_amount > 50000 or investment_amount <= 0 :
    print("value out of range")
    investment_amount = int(input("Provide an amount between 0-50000"))
interest_rate = int(input("Enter the interest rate (greater than 0 and less than 15): "))
while interest_rate > 15 or interest_rate <= 0:
    print("value out of range")
    interest_rate = int(input("enter an interest rate within 0-15"))
duration = int(input("Enter the investment duration in years (greater than 0): "))
while duration <= 0:
    int(input("value invalid, please enter an amount greater than 0"))
months = duration * 12
